doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      .container
        h2.title.left 
          a(href='/') Friendly Gear
        block head
        if user_id
          .usermenu.right
            div
              a(href='/users/#{user_id}/edit') Edit Profile
            div
              a(href='/users/#{user_id}/items') My Gear 
            div  
              a(href='/logout') Logout
        else
          .usermenu.right
            | Login
            form(method='post' action='/login')
              .row
                input.sml(type='text' name='username' placeholder='username')
                input.sml(type='password' name='password' placeholder='password')
              .row
                input.sml(type='submit' value='Login')
                | or 
                a(href='/users/new') Sign Up
    main
      .sidemenu.left
        block leftside
      .container
        block content
    footer.clear
      .container
        block foot
    block javascript
